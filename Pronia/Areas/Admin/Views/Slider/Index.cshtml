
@{
    ViewData["Title"] = "Sliders";
}
@model IEnumerable<Slider>
<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Sliders</h4>
                  
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Suptitle</th>
                                    <th>Title</th>
                                    <th>Description</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var slider in Model)
                                {
                                    <tr>
                                        <td>
                                  <img    src="~/assets/images/website-images//@slider.Image"/>

                                           </td>
                                        <td>@slider.Suptitle</td>
                                        <td>@slider.Title</td>
                                        <td>@slider.Description</td>
                                        <td>
                                            <a class="btn btn-primary" asp-action="Detail" asp-route-id="@slider.Id"> Detail </a>

                                        </td>
                                    </tr>
                                    
                                }

                            
                              
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


