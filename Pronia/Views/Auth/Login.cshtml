@using Pronia.ViewModels;
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Login";
}
@model LoginViewModel
<div class="container">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-lg-12 mt-5 ">
            <form method="post">
                <div class="login-form">
                    <h4 class="login-title">Log in</h4>
                    <div class="row">
                     
                     

                        <div class="col-md-12 ">
                            <label>Email</label>
                            <input asp-for="UsernameorEmail" placeholder="usernameorEmail" />
                            <span asp-validation-for="UsernameorEmail" class="text-danger"></span>
                        </div>

                        <div class="col-md-12 ">
                            <label>Password</label>
                            <input asp-for="Password" placeholder="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

             <div class="col-md-8">
                        <div class="check-box">
                          <input asp-for="RememberMe" />
                          <label for="RememberMe">RememberMe</label>
                        </div   >
                      </div>
                      <div class="col-md-4 pt-1 mt-md-0">
                        <div class="forgotton-password_info">
                          <a href="#"> Forgotten pasward?</a>
                        </div>
                      </div>

                        <div class="col-12">
                            <button class="btn btn-custom-size lg-size btn-pronia-primary">
                             log in
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

