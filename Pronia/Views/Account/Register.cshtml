@using Pronia.ViewModels;
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ViewData["Title"] = "Register";
}
@model RegisterViewModel
<div class="container">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="row">
<div class="col-lg-12 mt-5 ">
    <form method="post">
        <div class="login-form">
            <h4 class="login-title">Register</h4>
            <div class="row">
                <div class="col-md-12 ">
                    <label>Fullname</label>
                    <input asp-for="Fullname" placeholder="FullName" />
                            <span asp-validation-for="Fullname" class="text-danger"></span>
                </div>
                        <div class="col-md-12 ">
                            <label>Username</label>
                            <input asp-for="Username" placeholder="UserName" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

              <div class="col-md-12 ">
                    <label>Email</label>
                    <input asp-for="Email" placeholder="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                        <div class="col-md-12 ">
                            <label>Password</label>
                            <input asp-for="Password" placeholder="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-12 ">
                            <label>Passwordconfirm</label>
                            <input asp-for="PasswordConfirm" placeholder="passwordconfirm" />
                            <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                        </div>

                <div class="col-12">
                    <button class="btn btn-custom-size lg-size btn-pronia-primary">
                        Register
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>
    </div>
</div>
